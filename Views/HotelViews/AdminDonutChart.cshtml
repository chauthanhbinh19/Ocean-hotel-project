    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-rough"></script>
    <title>Hotel Dashboard</title>
    <script>
        // =========================Donut Chart=========================
        $(document).ready(function () {
            const xValues = [];
            const yValues = [];
        @foreach (var chart in ViewBag.donutchart_lists[0])
        {
            <text>
                        xValues.push(@chart.month);
                        yValues.push(@chart.price)
            </text>
        }
            const borderColor = ["rgba(255, 99, 132, 1)", "rgba(54, 162, 235, 1)", "rgba(255, 206, 86, 1)", "rgba(75, 192, 192, 1)", "rgba(153, 102, 255, 1)", "rgba(255, 159, 64, 1)", "rgba(25, 99, 132, 1)", "rgba(154, 162, 235, 1)", "rgba(155, 206, 86, 1)", "rgba(175, 192, 192, 1)", "rgba(253, 102, 255, 1)", "rgba(155, 159, 64, 1)"];
            if (xValues != null) {
                const myChart = new Chart("donutChart-1", {
                    type: "doughnut",
                    data: {
                        labels: xValues,
                        datasets: [{
                            label: 'Months',
                            backgroundColor: borderColor,
                            data: yValues,
                            borderColor: 'white',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        animation: {
                            duration: 2000,
                            easing: 'easeInOutQuart'
                        },
                        responsive: true,
                        legend: {
                            display: true,
                        }
                    }
                });
            }
            const xValues2 = [];
            const yValues2 = [];
        @foreach (var chart in ViewBag.donutchart_lists[1])
        {
            <text>
                        xValues2.push(@chart.month);
                        yValues2.push(@chart.price)
            </text>
        }
            if (xValues2 != null) {
                const myChart2 = new Chart("donutChart-2", {
                    type: "doughnut",
                    data: {
                        labels: xValues2,
                        datasets: [{
                            label: 'Days',
                            backgroundColor: borderColor,
                            data: yValues2,
                            borderColor: 'white',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        animation: {
                            duration: 2000,
                            easing: 'easeInOutQuart'
                        },
                        responsive: true,
                        legend: {
                            display: true,
                        }
                    }
                });
            }
            const xValues3 = [];
            const yValues3 = [];
        @foreach (var chart in ViewBag.donutchart_lists[2])
        {
            <text>
                        xValues3.push(@chart.month);
                        yValues3.push(@chart.price)
            </text>
        }
            if (xValues3 != null) {
                const myChart3 = new Chart("donutChart-3", {
                    type: "doughnut",
                    data: {
                        labels: xValues3,
                        datasets: [{
                            label: 'New Guest by months',
                            backgroundColor: borderColor,
                            data: yValues3,
                            borderColor: 'white',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        animation: {
                            duration: 2000,
                            easing: 'easeInOutQuart'
                        },
                        responsive: true,
                        legend: {
                            display: true,
                        }
                    }
                });
            }
            const xValues4 = [];
            const yValues4 = [];
        @foreach (var chart in ViewBag.donutchart_lists[3])
        {
            <text>
                        xValues4.push(@chart.month);
                        yValues4.push(@chart.price)
            </text>
        }
            if (xValues4 != null) {
                const myChart4 = new Chart("donutChart-4", {
                    type: "doughnut",
                    data: {
                        labels: xValues4,
                        datasets: [{
                            label: 'Returning Guest by months',
                            backgroundColor: borderColor,
                            data: yValues4,
                            borderColor: 'white',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        animation: {
                            duration: 2000,
                            easing: 'easeInOutQuart'
                        },
                        responsive: true,
                        legend: {
                            display: true,
                        }
                    }
                });
            }
            const xValues5 = [];
            const yValues5 = [];
        @foreach (var chart in ViewBag.donutchart_lists[4])
        {
            <text>
                        xValues5.push("@chart.type");
                        yValues5.push(@chart.quantity);
            </text>
        }
            if (xValues5 != null) {
                const myChart5 = new Chart("donutChart-5", {
                    type: "doughnut",
                    data: {
                        labels: xValues5,
                        datasets: [{
                            label: 'New Guest by week',
                            backgroundColor: borderColor,
                            data: yValues5,
                            borderColor: 'white',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        animation: {
                            duration: 2000,
                            easing: 'easeInOutQuart'
                        },
                        responsive: true,
                        legend: {
                            display: true,
                        }
                    }
                });
            }
            const xValues6 = [];
            const yValues6 = [];
        @foreach (var chart in ViewBag.donutchart_lists[5])
        {
            <text>
                        xValues6.push(@chart.price);
                        yValues6.push(@chart.quantity);
            </text>
        }
            if (xValues6 != null) {
                const myChart6 = new Chart("donutChart-6", {
                    type: "doughnut",
                    data: {
                        labels: xValues6,
                        datasets: [{
                            label: 'Returning Guest by week',
                            backgroundColor: borderColor,
                            data: yValues6,
                            borderColor: 'white',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        animation: {
                            duration: 2000,
                            easing: 'easeInOutQuart'
                        },
                        responsive: true,
                        legend: {
                            display: true,
                        }
                    }
                });
            }
        });
    </script>
</head>

