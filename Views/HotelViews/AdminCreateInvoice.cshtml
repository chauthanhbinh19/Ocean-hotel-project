    <script>
        $(document).ready(function () {
            $('.myCheckbox').change(function () {
                var checkboxId = $(this).attr('id');
                var targetInputId = $(this).data('target');
                var labelValue = $('label[for="' + checkboxId + '"]').text();
                if ($(this).is(':checked')) {
                    $('#' + targetInputId).val(labelValue);
                } else {
                    $('#' + targetInputId).val('');
                }
            });
            var initialValue = 0;
            $('#booking_id').change(function () {
                var selectedOption = $(this).val();

                $.ajax({
                    type: "POST",
                    url: "/Invoice/GetPrice",
                    data: { selectedOption: selectedOption },
                    success: function (response) {
                        $('#total').val(response.price);
                        $('#grandtotal').val(response.price);
                    },
                    error: function () {
                        alert("An error occurred while retrieving contact information.");
                    }
                });
            });
            $('.myCheckbox').change(function () {
                var checkbox = $(this);
                var isChecked = checkbox.is(':checked');
                var name = checkbox.siblings('label').text();
                console.log(name);
                if (isChecked) {
                    $.ajax({
                        url: '/Invoice/GetPrice2',
                        type: 'POST',
                        data: { selectedOption: name },
                        success: function (response) {
                            // Xử lý phản hồi từ máy chủ
                            var getprice = parseFloat($('#total').val());
                            var price = response.price;
                            price = price + getprice;
                            $('#total').val(price);
                            // Thực hiện các thao tác khác với giá tương ứng
                        },
                        error: function (xhr, status, error) {
                            console.error(error);
                        }
                    });
                } else {
                    $.ajax({
                        url: '/Invoice/GetPrice2',
                        type: 'POST',
                        data: { selectedOption: name },
                        success: function (response) {
                            // Xử lý phản hồi từ máy chủ
                            var getprice = parseFloat($('#total').val());
                            var price = response.price;
                            price = getprice - price;
                            $('#total').val(price);
                            // Thực hiện các thao tác khác với giá tương ứng
                        },
                        error: function (xhr, status, error) {
                            console.error(error);
                        }
                    });
                }
            });
            $('#tax_name').change(function () {
                var selectedOption = $(this).val();

                $.ajax({
                    type: "POST",
                    url: "/Invoice/GetTaxes",
                    data: { selectedOption: selectedOption },
                    success: function (response) {
                        var tax =response.price;
                        if($('#promotion_name').val() != "none"){
                            var price= parseFloat($('#total').val());
                            var price1= parseFloat($('#grandtotal').val());
                            price= price1 +price*tax/100;
                            $('#grandtotal').val(price);
                        }else{
                            var price= parseFloat($('#total').val());
                            price= price +price*tax/100;
                            $('#grandtotal').val(price);
                        }
                    },
                    error: function () {
                        alert("An error occurred while retrieving contact information.");
                    }
                });
            });
            $('#promotion_name').change(function () {
                var selectedOption = $(this).val();

                $.ajax({
                    type: "POST",
                    url: "/Invoice/GetPromotion",
                    data: { selectedOption: selectedOption },
                    success: function (response) {
                        var tax =response.price;
                        if($('#tax_name').val() != "none"){
                            var price= parseFloat($('#total').val());
                            var price1= parseFloat($('#grandtotal').val());
                            price= price1 -price*tax/100;
                            $('#grandtotal').val(price);
                        }else{
                            var price= parseFloat($('#total').val());
                            price= price -price*tax/100;
                            $('#grandtotal').val(price);
                        }
                    },
                    error: function () {
                        alert("An error occurred while retrieving contact information.");
                    }
                });
            });
        });
    </script>
