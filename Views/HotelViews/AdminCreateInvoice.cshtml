                                        }
                                    </select>
                                </div>
                                <div class="main-col">
                                    <div><label>Discount %</label></div>
                                    <select asp-for="promotion!.name" id="promotion_name">
                                        <option value="none">0</option>
                                        @foreach (var customer1 in ViewBag.promotion_list)
                                        {
                                            <option value="@customer1.name">@customer1.name</option>
                                        }
                                    </select>
                                </div>
                                <div class="main-col">
                                    <div><label>Grand Total</label></div>
                                    <input type="text" asp-for="total_amount" id="grandtotal"
                                        style="text-align: right; padding-right:10px; margin-left:20px;" value="0">
                                </div>
                            </div>
                            <div class="sub-main-bottom-2">
                                <div class="main-col">
                                    <button class="button-29">Save Invoice</button>
                                </div>
                            </div>
                        </form>
