                </li>
                <li>
                    <a class="btn14">
                        <span class="icon"><i class="fa-solid fa-gear"></i></span>
                        <span class="tittle">Setting</span>
                    </a>
                </li>
                <li>
                    <a class="btn15" asp-action="SignOut1" asp-controller="Login">
                        <span class="icon"><i class="fa-solid fa-arrow-right-from-bracket"></i></span>
                        <span class="tittle">Sign Out</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- ==============================main============================ -->
        <div class="main">
            <div class="top-bar">
                <div class="toggle"><i class="fa-solid fa-bars"></i></div>
                <div class="search">
                </div>
                <div id="change-dark-mode">
                    <i class="fa-solid fa-sun"></i>
                </div>
                <div class="user-role-name">
                    <div class="user">
                        <img src="~/Image/Avatar/@ViewBag.employee_avatar.img" alt="">
                    </div>
                    <div class="role-name">
                        <span class="user1"style="font-size: 18px;">@ViewBag.employee_avatar.name</span><br>
                        <span class="user2"style="font-size: 14px;">@ViewBag.employee_avatar.role</span>
                    </div>
                </div>
            </div>
            <!-- ==============================Card============================== -->
            <div class="sub-main">
                <div class="article-11">
                    <div class="box-tittle-1">
                        <p>Edit Furniture</p>
                        <img src="~/Image/svgpng.com/item (170).png" alt="">
                    </div>      
                    <div class="search-box">
                        <form method="post" asp-controller="Furniture" asp-action="AdminUpdateFurniture">
                            <div class="box-context">
                            <div class="sub-main-bottom sub-bg background_bg1">
                                <div class="main-col">
                                    <div><label>Furniture ID</label></div>
                                    <select asp-for="id" id="furniture_id">
                                        @foreach(var furniture in ViewBag.furniture_list){
                                            <option value="@furniture.id">@furniture.id</option>
                                        }   
                                    </select>
                                    @Html.ValidationMessageFor(m => m.id)
                                </div>
                                <div class="main-col">
                                    <div><label>Furniture Name</label></div>
                                    <select asp-for="name" id="furniture_name">
                                        @foreach(var furniture in ViewBag.furniture_list){
                                            <option value="@furniture.name">@furniture.name</option>
                                        }   
                                    </select>
                                    @Html.ValidationMessageFor(m => m.name)
                                </div>
                                <div class="main-col">
                                    <div><label>Furniture Quantity</label></div>
                                    <input type="text" asp-for="quanity" id="quantity">
                                    @Html.ValidationMessageFor(m => m.quanity)
                                </div>
                                <div class="main-col">
                                    <div><label>Furniture Type</label></div>
                                    <select asp-for="type" id="type">
                                        <option value="standard">standard</option>
                                        <option value="superior">superior</option>
                                        <option value="deluxe">deluxe</option>
                                        <option value="suite">suite</option>
                                    </select>
                                    @Html.ValidationMessageFor(m => m.type)
                                </div>
                                <div class="main-col">
                                    <div><label>Price</label></div>
                                    <input type="text" asp-for="price" id="price">
                                    @Html.ValidationMessageFor(m => m.price)
                                </div>
                                <div class="main-col"><span>&nbsp;</span></div>
                                <div class="main-col"><span>&nbsp;</span></div>
                                <div class="main-col"><span>&nbsp;</span></div>
                                <div class="main-col"><span>&nbsp;</span></div>
                                <div class="main-col"><span>&nbsp;</span></div>
                                <div class="main-col"><span>&nbsp;</span></div>
                            </div>
                            <div class="box-img">
                                @if(Model != null){
                                    <div class="box-img-1"><img src="~/Image/Furniture/@Model.img" alt="" id="box_img"></div>
                                }else{
                                    <div class="box-img-1"><img src="~/Image/Furniture/Single Bed.jpg" alt="" id="box_img"></div>
                                }
                                <div class="mini-box-circle">
                                    @if(Model != null){
                                        <div class="icon-room-1"><img src="~/Image/svgpng.com/@Model.icon" alt="" id="box_img_1"></div>
                                    }else{
                                        <div class="icon-room-1"><img src="~/Image/svgpng.com/item (183).png" alt="" id="box_img_1"></div>
                                    }
                                    <div class="box-text-2">
                                        <div class="box_id" style="color:cornflowerblue;" id="box_id">FUR-<input type="text" asp-for="id" id="input_id" class="box-input" readonly></div>
                                        <div class="box_name" id="box_name"><input type="text" asp-for="name" id="input_name" class="box-input" readonly></div>
                                    </div>
                                </div>
                                <div class="mini-box-circle">
                                    <div class="box-circle"><i class="fa-solid fa-hashtag"></i></div>
                                    <div class="text-center" id="box_quantity">Quantity <input type="text" asp-for="quanity" id="input_quanitity" class="box-input" readonly></div>
                                </div>
                            </div>
                            </div>
                            <button type="submit" class="button-29" style="float:right; margin-right: 90px;">Save Furniture</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function(){
            $('#furniture_id').change(function () {
                var selectedOption = $(this).val();
                $.ajax({
                    type: "POST",
                    url: "/Furniture/GetFurniture",
                    data: { selectedOption: selectedOption },
                    success: function (response) {
                        $('#quantity').val(response.quantity);
                        $('#furniture_name').val(response.name);
                        $('#type').val(response.type);
                        $('#input_id').val(response.id);
                        $('#input_name').val(response.name);
                        $('#input_quantity').val(response.quantity);
                        $('#price').val(response.price);
                        $('#box_img').attr("src","../Image/Furniture/"+response.img);
                        $('#box_img_1').attr("src","../Image/svgpng.com/"+response.icon);
                    },
                    error: function () {
                        alert("An error occurred while retrieving contact information.");
                    }
                });
            });
        });
    </script>
</body>
</html>