    <script>
        $(document).ready(function () {
            if($('#input_status').val() == "Active"){
                $('#input_status').addClass("active-status-1");
                $('#input_status').removeClass("inactive-status-1");
            }else{
                $('#input_status').addClass("inactive-status-1");
                $('#input_status').removeClass("active-status-1");
            }
            if($('#input_status1').val() == "Active"){
                $('#input_status1').addClass("active-status-1");
                $('#input_status1').removeClass("inactive-status-1");
            }else{
                $('#input_status1').addClass("inactive-status-1");
                $('#input_status1').removeClass("active-status-1");
            }
            $(document).on('change', '#room_name', function () {
                var selectedOption = $("#roomnamelist").children('option:selected').text();
                $('#room_name').text(selectedOption);
            });
            $('#room_name, #checkin, #checkout').on('input', function () {
                var room_name = $('#room_name').val();
                var checkin = new Date($('#checkin').val());
                var checkout = new Date($('#checkout').val());
                console.log($('#checkin').val());
                console.log($('#checkout').val());
                if( checkout.getTime() < checkin.getTime()){
                    $('#checkouterror').text("Check-out date must be greater than check-in date")
                    @* alert("error") *@
                }else{
                    $('#checkouterror').text("")
                    if (room_name !== "" && checkin !== "" && checkout !== "") {
                    var timeDiff = Math.abs(checkout.getTime() - checkin.getTime());
                    var days = Math.ceil(timeDiff / (1000 * 3600 * 24));
                    var total=0;
                    $.ajax({
                        type: "POST",
                        url: "/Booking/GetRoomInfo2",
                        data: { selectedOption: room_name },
                        success: function (response) {
                            var price =parseFloat(response.type);
                            total=price* days;
                            $('#total').val(total);
                        },
                        error: function () {
                            alert("An error occurred while retrieving contact information.");
                        }
                    });
                }
                }
            });
            @* $(function () {
		    	$('#datetimepicker').datetimepicker({
		    		inline: true,
		    	});
		    }); *@
            $('#booking_id').change(function () {
                var selectedOption = $(this).val();

                $.ajax({
                    type: "POST",
                    url: "/Booking/GetBookingInfo",
                    data: { selectedOption: selectedOption },
                    success: function (response) {
                        $('#customer_name').val(response.customer_name);
                        $('#customer_phone').val(response.customer_phone);
                        $('#customer_email').val(response.customer_email);
                        $('#room_name').val(response.room_name);
                        $('#room_type').val(response.room_type);
                        $('#number_of_guest').val(response.number_of_guest);
                        $('#checkin').val(response.check_in);
                        $('#checkout').val(response.check_out);
                        $('#total').val(response.total_price);
                        $('#booking_status').val(response.booking_status);
                        $('#room_id').val(response.room_id);
                    },
                    error: function () {
                        alert("An error occurred while retrieving contact information.");
                    }
                });
            });
        });
    </script>
