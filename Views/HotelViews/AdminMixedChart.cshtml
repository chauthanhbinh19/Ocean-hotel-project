<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/Image/sea.png" type="image/x-icon">
    <link rel="stylesheet" href="~/css/Admin.css">
    <script src="https://kit.fontawesome.com/d85c1eb16f.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Admin.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-rough"></script>
    <title>Hotel Dashboard</title>
    <script>
        // ==========================Mixed Chart==========================
        $(document).ready(function () {
            const xValues = [];
            const yValues1 = [];
            const yValues2 = [];
            // const borderColor=["rgba(255, 99, 132, 1)","rgba(54, 162, 235, 1)","rgba(255, 206, 86, 1)","rgba(75, 192, 192, 1)","rgba(153, 102, 255, 1)","rgba(255, 159, 64, 1)","rgba(255, 99, 132, 1)","rgba(54, 162, 235, 1)","rgba(255, 206, 86, 1)","rgba(75, 192, 192, 1)","rgba(153, 102, 255, 1)","rgba(255, 159, 64, 1)"];
            // const barColor =["rgba(255, 99, 132, 0.2)", "rgba(54, 162, 235, 0.2)", "rgba(255, 206, 86, 0.2)", "rgba(75, 192, 192, 0.2)", "rgba(153, 102, 255, 0.2)", "rgba(255, 159, 64, 0.2)","rgba(255, 99, 132, 0.2)", "rgba(54, 162, 235, 0.2)", "rgba(255, 206, 86, 0.2)","rgba(75, 192, 192, 0.2)", "rgba(153, 102, 255, 0.2)", "rgba(255, 159, 64, 0.2)"];
        @foreach (var chart in ViewBag.mixedchart_lists[0])
        {
            <text>
                        xValues.push(@chart.month);
                        yValues1.push(@chart.price);
            </text>
        }
        @foreach (var chart in ViewBag.mixedchart_lists[1])
        {
            <text>
                        yValues2.push(@chart.price);
            </text>
        }
            const myChart = new Chart("mixedChart-1", {
                type: "bar",
                data: {
                    labels: xValues,
                    datasets: [{
                        label: 'New Guests',
                        backgroundColor: 'rgba(255, 99, 132, 1)',
                        data: yValues1,
                        borderColor: 'rgba(255, 99, 132, 0.2)',
                        borderWidth: 1
                    }, {
                        label: 'Returning Guests',
                        backgroundColor: 'rgba(255, 206, 86, 1)',
                        data: yValues2,
                        borderColor: 'rgba(255, 206, 86, 0.2)',
                        borderWidth: 1
                    }]
                },
                options: {
                    animation: {
                        duration: 2000,
                        easing: 'easeInOutQuart'
                    },
                    responsive: true,
                    legend: {
                        display: true,
                        labels: {
                            fontColor: 'rgb(255, 99, 132)'
                        }
                    },
                    scales: {
                        yAxes: [{
                            display: true,
                            ticks: {
                                beginAtZero: true,
                            }
                        }]
                    }
                }
            });
            const xValues1 = ["1", "2", "3", "4", "5", "6", "7"];
            const yValues3 = [15, 25, 30, 45, 40, 40, 50];
            const yValues4 = [25, 35, 20, 35, 50, 30, 55];
            const myChart1 = new Chart("mixedChart-2", {
                type: "bar",
                data: {
                    labels: xValues,
                    datasets: [{
                        label: 'New Guests',
                        backgroundColor: 'rgba(54, 162, 235, 1)',
                        data: yValues1,
                        borderColor: 'rgba(54, 162, 235, 0.2)',
                        borderWidth: 1
                    }, {
                        label: 'Returning Guests',
                        backgroundColor: 'rgba(75, 192, 192, 1)',
                        data: yValues2,
                        borderColor: 'rgba(75, 192, 192, 0.2)',
                        borderWidth: 1
                    }]
                },
                options: {
                    animation: {
                        duration: 2000,
                        easing: 'easeInOutQuart'
                    },
                    responsive: true,
                    legend: {
                        display: true,
                        labels: {
                            fontColor: 'rgb(255, 99, 132)'
                        }
                    },
                    scales: {
                        yAxes: [{
                            display: true,
                            ticks: {
                                beginAtZero: true,
                            }
                        }]
                    }
                }
            });
            const xValues5 = ["Status"];
            const yValues_available = [];
            const yValues_booked = [];
            @foreach(var chart in ViewBag.mixedchart_lists[2]){
                <text>
                    yValues_booked.push(@chart.quantity);
                </text>
            }
            @foreach(var chart in ViewBag.mixedchart_lists[3]){
                <text>
                    yValues_available.push(@chart.quantity);
                </text>
            }
            const myChart5 = new Chart("mixedChart-5", {
                type: "bar",
                data: {
                    labels: xValues5,
                    datasets: [{
                        label: 'Available Rooms',
                        backgroundColor: 'rgba(75, 192, 192, 1)',
                        data: yValues_available,
                        borderColor: 'rgba(75, 192, 192, 0.2)',
                        borderWidth: 1,
                        barPercentage: 0.5,
                        categoryPercentage: 0.5
                    }, {
                        label: 'Booked Rooms',
                        backgroundColor: 'rgba(255, 206, 86, 1)',
                        data: yValues_booked,
                        borderColor: 'rgba(255, 206, 86, 0.2)',
                        borderWidth: 1,
                        barPercentage: 0.5,
                        categoryPercentage: 0.5
                    }]
                },
                options: {
                    animation: {
                        duration: 2000,
                        easing: 'easeInOutQuart'
                    },
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    },
                    responsive: true,
                    legend: {
                        display: true,
                        labels: {
                            fontColor: 'rgb(255, 99, 132)'
                        }
                    },
                    scales: {
                        yAxes: [{
                            display: true,
                            ticks: {
                                beginAtZero: true,
                            }
                        }]
                    }
                }
            });
        });
    </script>
</head>

