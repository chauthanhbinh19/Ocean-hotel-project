    <script>
        $(document).ready(function(){
            const xValues = [];
            const yValues1 = [];
            const yValues2 = [];
            @foreach (var chart in ViewBag.mixedchart_lists[0])
        {
            <text>
                        yValues1.push(@chart.price);
            </text>
        }
        @foreach (var chart in ViewBag.mixedchart_lists[1])
        {
            <text>
                        xValues.push(@chart.month);
                        yValues2.push(@chart.price);
            </text>
        }
            const myChart = new Chart("mixedChart-1", {
                type: "line",
                data: {
                    labels: xValues,
                    datasets: [{
                        label: 'Check in',
                        backgroundColor: 'rgba(255, 99, 132, 1)',
                        data: yValues1,
                        borderColor: 'rgba(255, 99, 132, 0.7)',
                        borderWidth: 5,
                        fill: false
                    }, {
                        label: 'Check out',
                        backgroundColor: 'rgba(255, 206, 86, 1)',
                        data: yValues2,
                        borderColor: 'rgba(255, 206, 86, 0.7)',
                        borderWidth: 5,
                        fill: false
                    }]
                },
                options: {
                    animation: {
                        duration: 2000,
                        easing: 'easeInOutQuart'
                    },
                    responsive: true,
                    legend: {
                        display: true,
                        labels: {
                            fontColor: 'rgb(255, 99, 132)'
                        }
                    },
                    scales: {
                        yAxes: [{
                            display: true,
                            ticks: {
                                beginAtZero: true,
                            },
                            grid: {
                              drawOnChartArea: false, // only want the grid lines for one axis to show up
                            },
                        }]
                    }
                }
            });
        })
    </script>
