                </li>
                <li>
                    <a class="btn6">
                        <span class="icon"><i class="fa-solid fa-user"></i></span>
                        <span class="tittle">Employees <i class="fas fa-caret-right"></i></span>
                    </a>
                    <ul class="nav-sub-ul">
                        <li><a class="all-employee-button" href="/Employee/AdminEmployee">All Employees</a></li>
                        <li><a class="edit-employee-button" href="/Employee/AdminEditEmployee">Edit Employee</a></li>
                        <li><a class="add-employee-button" href="/Employee/AdminAddEmployee">Add Employee</a></li>
                    </ul>
                </li>
                <li>
                    <a class="btn7">
                        <span class="icon"><i class="fas fa-concierge-bell"></i></span>
                        <span class="tittle">Services <i class="fas fa-caret-right"></i></span>
                    </a>
                    <ul class="nav-sub-ul">
                        <li><a class="service-button" href="/Service/AdminServices">All Services</a></li>
                        <li><a class="shuttle-button" href="/Service/AdminShuttle">Shuttle Services</a></li>
                    </ul>
                </li>
                <li>
                    <a class="btn16">
                        <span class="icon"><i class="fa-solid fa-couch"></i></span>
                        <span class="tittle">Furniture <i class="fas fa-caret-right"></i></span>
                    </a>
                    <ul class="nav-sub-ul">
                        <li><a class="all-furniture-button" href="/Furniture/AdminFurniture">All Furniture</a></li>
                        <li><a class="edit-furniture-button" href="/Furniture/AdminEditFurniture">Edit Furniture</a></li>
                        <li><a class="add-furniture-button" href="/Furniture/AdminAddFurniture">Add Furniture</a></li>
                    </ul>
                </li>
                <li>
                    <a class="btn8" href="/Promotion/AdminPricing">
                        <span class="icon"><i class="fa-solid fa-money-bill-wave"></i></span>
                        <span class="tittle">Pricing</span>
                    </a>
                </li>
                <li>
                    <a class="btn9">
                        <span class="icon"><i class="fa-solid fa-clipboard-user"></i></span>
                        <span class="tittle">Staff <i class="fas fa-caret-right"></i></span>
                    </a>
                    <ul class="nav-sub-ul">
                        <li><a class="leave-button" href="/Employee/AdminLeave">Leave</a></li>
                        <li><a class="attendance-button" href="/Employee/AdminAttendance">Attandance</a></li>
                    </ul>
                </li>
                <li>
                    <a class="btn10">
                        <span class="icon"><i class="fa-solid fa-van-shuttle"></i></span>
                        <span class="tittle">Accounting <i class="fas fa-caret-right"></i></span>
                    </a>
                    <ul class="nav-sub-ul">
                        <li><a class="invoice-button" href="/Invoice/AdminInvoice">Invoices</a></li>
                        <li><a class="payment-button" href="/Payment/AdminPayment">Payments</a></li>
                        <li><a class="Expenses-button" href="/Expense/AdminExpense">Expenses</a></li>
                        <li><a class="Taxes-button" href="/Taxes/AdminTaxes">Taxes</a></li>
                    </ul>
                </li>
                <li>
                    <a class="btn11">
                        <span class="icon"><i class="fa-solid fa-book"></i></span>
                        <span class="tittle">Payroll <i class="fas fa-caret-right"></i></span>
                    </a>
                    <ul class="nav-sub-ul">
                        <li><a class="employee-salary-button" href="/Employee/AdminEmployeeSalary">Employee Salary</a>
                        </li>
                        <li><a class="payslip-button" href="/Employee/AdminPayslip">Payslip</a></li>
                    </ul>
                </li>
                <li>
                    <a class="btn12">
                        <span class="icon"><i class="fas fa-chart-bar"></i></span>
                        <span class="tittle">Chart <i class="fas fa-caret-right"></i></span>
                    </a>
                    <ul class="nav-sub-ul">
                        <li><a class="bar-button" href="/Chart/AdminBarChart">Bar Chart</a></li>
                        <li><a class="line-button" href="/Chart/AdminLineChart">Line Chart</a></li>
                        <li><a class="pie-button" href="/Chart/AdminPieChart">Pie Chart</a></li>
                        <li><a class="donut-button" href="/Chart/AdminDonutChart">Donut Chart</a></li>
                        <li><a class="mixed-button" href="/Chart/AdminMixedChart">Mixed Chart</a></li>
                    </ul>
                </li>
                <li>
                    <a class="btn13">
                        <span class="icon"><i class="fa-solid fa-chart-simple"></i></span>
                        <span class="tittle">Reports <i class="fas fa-caret-right"></i></span>
                    </a>
                    <ul class="nav-sub-ul">
                        <li><a class="expense-report-button" href="/Expense/AdminExpenseReport">Expense Report</a></li>
                        <li><a class="invoice-report-button" href="/Invoice/AdminInvoiceReport">Invoice Report</a></li>
                    </ul>
                </li>
                <li>
                    <a class="btn14">
                        <span class="icon"><i class="fa-solid fa-gear"></i></span>
                        <span class="tittle">Setting</span>
                    </a>
                </li>
                <li>
                    <a class="btn15" asp-action="SignOut1" asp-controller="Login">
                        <span class="icon"><i class="fa-solid fa-arrow-right-from-bracket"></i></span>
                        <span class="tittle">Sign Out</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- ==============================main============================ -->
        <div class="main">
            <div class="top-bar">
                <div class="toggle"><i class="fa-solid fa-bars"></i></div>
                <div class="search">
                </div>
                <div id="change-dark-mode">
                    <i class="fa-solid fa-sun"></i>
                </div>
                <div class="user-role-name">
                    <div class="user">
                        <img src="~/Image/Avatar/@ViewBag.employee_avatar.img" alt="">
                    </div>
                    <div class="role-name">
                        <span class="user1"style="font-size: 18px;">@ViewBag.employee_avatar.name</span><br>
                        <span class="user2"style="font-size: 14px;">@ViewBag.employee_avatar.role</span>
                    </div>
                </div>
            </div>
            <!-- ==============================Card============================== -->
            <div class="sub-main">
                <div class="article-3">
                    <div class="box-tittle-1">
                        <p>Room</p>
                        <img src="~/Image/svgpng.com/item (115).png" alt="">
                    </div>
                    <div class="nav-cover">
                        <div class="nav-room-bar">
                            <ul class="nav-room-ul">
                                <li class="nav-item"><a class="nav-link" href="/Room/AdminRoom">All Room</a></li>
                                <li class="nav-item"><a class="nav-link" href="/Room/AdminRoomStandard">Standard</a></li>
                                <li class="nav-item"><a class="nav-link" href="/Room/AdminRoomSuperior">Superior</a></li>
                                <li class="nav-item"><a class="nav-link" href="/Room/AdminRoomDeluxe">Deluxe</a></li>
                                <li class="nav-item"><a class="nav-link active">Suite</a></li>
                            </ul>
                        </div>
                        <div class="search-box">
                            <form method="post" asp-action="AdminSearchRoomSuite" asp-controller="Room" style="display: flex; justify-content: center; align-items: center; column-gap: 10px;">
                                <input type="text" name="searchkeyword" id="" placeholder="Search here">
                                <button class="button-29">Search</button>
                            </form>
                            <form method="post" asp-action="AdminRoomSuite" asp-controller="Room">
                                <button class="button-29"><i class="fa-solid fa-rotate-right fa-spin"></i></button>
                            </form>
                        </div>
                        <div class="add-button">
                            <button class="button-29"><a href="/Room/AdminAddRoom">Add Room</a></button>
                        </div>
                    </div>
                    <div class="room-list">
                        <div class="box-frame-5 suite active-table" id="suite">
                            <div class="box-frame5-table">
                                <div class="box-container-1">
                                    <table>
                                        <thead class="thead-row">
                                            <tr>
                                                <th class="th-row sorting" style="min-width: 70px; max-width: 70px;">
                                                    <div class="input">
                                                        <div class="table-ttile">
                                                            <div class="checkbox-wrapper-1">
                                                            <input id="example1-@count" class="substituted myCheckbox" type="checkbox"
                                                                aria-hidden="true" />
                                                            <label for="example1-@count"></label>
                                                        </div>
                                                        </div>
                                                        <div class="chevron">
                                                            <div class="up"><a href="@Url.Action("AdminSortRoom", "Room", new { id = "id_asc" })"><i class="fas fa-caret-up"></i></a></div>
                                                            <div class="down"><a href="@Url.Action("AdminSortRoom", "Room", new { id = "id_desc" })"><i class="fas fa-caret-down"></i></a></div>
                                                        </div>
                                                    </div>
                                                </th>
                                                <th class="th-row sorting" style="min-width: 280px; min-width: 280px;">
                                                    <div class="input">
                                                        <div class="table-ttile">
                                                            Room Name
                                                        </div>
                                                        <div class="chevron">
                                                            <div class="up"><a href="@Url.Action("AdminSortRoom", "Room", new { id = "roomname_asc" })"><i class="fas fa-caret-up"></i></a></div>
                                                            <div class="down"><a href="@Url.Action("AdminSortRoom", "Room", new { id = "roomname_desc" })"><i class="fas fa-caret-down"></i></a></div>
                                                        </div>
                                                    </div>
                                                </th>
                                                <th class="th-row sorting" style="min-width: 160px; min-width: 160px;">
                                                    <div class="input">
                                                        <div class="table-ttile">
                                                            Number of guest
                                                        </div>
                                                        <div class="chevron">
                                                            <div class="up"><a href="@Url.Action("AdminSortRoom", "Room", new { id = "numberofguest_asc" })"><i class="fas fa-caret-up"></i></a></div>
                                                            <div class="down"><a href="@Url.Action("AdminSortRoom", "Room", new { id = "numberofguest_desc" })"><i class="fas fa-caret-down"></i></a></div>
                                                        </div>
                                                    </div>
                                                </th>
                                                <th class="th-row sorting" style="min-width: 150px; min-width: 150px;">
                                                    <div class="input">
                                                        <div class="table-ttile">
                                                            Room Floor
                                                        </div>
                                                        <div class="chevron">
                                                            <div class="up"><a href="@Url.Action("AdminSortRoom", "Room", new { id = "floor_asc" })"><i class="fas fa-caret-up"></i></a></div>
                                                            <div class="down"><a href="@Url.Action("AdminSortRoom", "Room", new { id = "floor_desc" })"><i class="fas fa-caret-down"></i></a></div>
                                                        </div>
                                                    </div>
                                                </th>
                                                <th class="th-row sorting" style="min-width: 280px; max-width: 280px;">
                                                    <div class="input">
                                                        <div class="table-ttile">
                                                            Room Furniture
                                                        </div>
                                                        <div class="chevron">
                                                            <div class="up"><i class='fas fa-caret-up'></i></div>
                                                            <div class="down"><i class='fas fa-caret-down'></i></div>
                                                        </div>
                                                    </div>
                                                </th>
                                                <th class="th-row sorting" style="min-width: 100px; max-width: 100px;">
                                                    <div class="input">
                                                        <div class="table-ttile">
                                                            Room Type
                                                        </div>
                                                        <div class="chevron">
                                                            <div class="up"><a href="@Url.Action("AdminSortRoom", "Room", new { id = "roomtype_asc" })"><i class="fas fa-caret-up"></i></a></div>
                                                            <div class="down"><a href="@Url.Action("AdminSortRoom", "Room", new { id = "roomtype_desc" })"><i class="fas fa-caret-down"></i></a></div>
                                                        </div>
                                                    </div>
                                                </th>
                                                <th class="th-row sorting" style="min-width: 200px; max-width: 200px;">
                                                    <div class="input">
                                                        <div class="table-ttile">
                                                            Room Amenities
                                                        </div>
                                                        <div class="chevron">
                                                            <div class="up"><i class='fas fa-caret-up'></i></div>
                                                            <div class="down"><i class='fas fa-caret-down'></i></div>
                                                        </div>
                                                    </div>
                                                </th>
                                                <th class="th-row sorting" style="min-width: 100px; max-width: 100px;">
                                                    <div class="input">
                                                        <div class="table-ttile">
                                                            Price
                                                        </div>
                                                        <div class="chevron">
                                                            <div class="up"><a href="@Url.Action("AdminSortRoom", "Room", new { id = "price_asc" })"><i class="fas fa-caret-up"></i></a></div>
                                                            <div class="down"><a href="@Url.Action("AdminSortRoom", "Room", new { id = "price_desc" })"><i class="fas fa-caret-down"></i></a></div>
                                                        </div>
                                                    </div>
                                                </th>
                                                <th class="th-row sorting" style="min-width: 100px; max-width: 100px;">
                                                    <div class="input">
                                                        <div class="table-ttile">
                                                            Status
                                                        </div>
                                                        <div class="chevron">
                                                            <div class="up"><a href="@Url.Action("AdminSortRoom", "Room", new { id = "status_asc" })"><i class="fas fa-caret-up"></i></a></div>
                                                            <div class="down"><a href="@Url.Action("AdminSortRoom", "Room", new { id = "status_desc" })"><i class="fas fa-caret-down"></i></a></div>
                                                        </div>
                                                    </div>
                                                </th>
                                                <th class="th-row sorting" style="min-width: 50px; max-width: 50px;">
                                                    <div class="input">
                                                        <div>Action
                                                        </div>
                                                    </div>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var room in ViewBag.room_list)
                                            {
                                                <tr class="room-info">
                                                    <td class="checkbox-col">
                                                        <div class="checkbox-wrapper-1">
                                                            <input id="example-@count" class="substituted myCheckbox" type="checkbox"
                                                                aria-hidden="true" />
                                                            <label for="example-@count"></label>
                                                        </div>
                                                    </td>
                                                    <td class="roomname-col">
                                                        <div class="room-name">
                                                            <div class="room-avatar">
                                                                <img src="~/Image/@room.img"
                                                                    style="width:140px; height: 100px; border-radius:15px; margin:0 10px;"
                                                                    alt="">
                                                            </div>
                                                            <div class="room-mini-name">
                                                                <div class="room-id">RO-@room.id</div>
                                                                <div class="name">@room.name</div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="bedtype-col">
                                                        <div class="bedtype-box"><i class="fa-solid fa-users"></i> @room.number_of_guest</div>
                                                    </td>
                                                    <td class="roomfloor-col">
                                                        <div class="roomfloor-box">Floor @room.floor</div>
                                                    </td>
                                                    <td class="roomfacility-col">
                                                        <div class="roomfacility-box">
                                                            @foreach (var furniture in room.furnitures)
                                                            {
                                                                <span>@furniture.name, </span>
                                                            }
                                                        </div>
                                                    </td>
                                                    <td class="roomtype-col">
                                                        @if (room.type == "Standard")
                                                        {
                                                            <div class="room-type standard-status">@room.type</div>
                                                        }
                                                        else if (room.type == "Superior")
                                                        {
                                                            <div class="room-type superior-status">@room.type</div>
                                                        }
                                                        else if (room.type == "Deluxe")
                                                        {
                                                            <div class="room-type deluxe-status">@room.type</div>
                                                        }
                                                        else
                                                        {
                                                            <div class="room-type suite-status">@room.type</div>
                                                        }
                                                    </td>
                                                    <td class="roomfacility-col">
                                                        <div class="roomfacility-box">
                                                            @foreach (var amenities in room.amenities)
                                                            {
                                                                <span>@amenities.name, </span>
                                                            }
                                                        </div>
                                                    </td>
                                                    <td class="roomprice-col">
                                                        <div class="roomfloor-box">$ @room.price</div>
                                                    </td>
                                                    <td class="available-col">
                                                        <div class="available">
                                                            <div class="available-status">@room.status</div>
                                                        </div>
                                                    </td>
                                                    <td class="edit-col">
                                                        <div class="edit"><span class="btn-change"><i
                                                                    class="fa-solid fa-ellipsis"></i>
                                                                <div class="drop-down">
                                                                    <div class="drop-down-sub">
                                                                        @Html.ActionLink("Edit", "EditRoom","Room", new { id = @room.id })
                                                                        @Html.ActionLink("Delete", "DeleteRoom","Room", new { id = @room.id }, new{@Class="delete-link"})
                                                                    </div>
                                                                </div>
                                                            </span>
                                                        </div>
                                                    </td>
                                                </tr>
                                                count++;
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="bottom-table">
                                <div class="bottom-text">Showing 1 to 5 of entries</div>
                                <div class="bottom-button">
                                    @if(ViewBag.searchResult==1){
                                        @Html.PagedListPager((IPagedList<Rooms>)ViewBag.room_list, page =>Url.Action("AdminSearchRoomSuite", "Room", new {page =page}),
                                        new PagedListRenderOptions{
                                            MaximumPageNumbersToDisplay=3,
                                            PreviousElementClass="previous-button horizontal-paging",
                                            LinkToPreviousPageFormat="<< Previous",
                                            NextElementClass="next-button horizontal-paging",
                                            LinkToNextPageFormat="Next >>",
                                            UlElementClasses= new[] {"horizontal-paging","bottom-number"},
                                            LinkToLastPageFormat="Last Page",
                                            LinkToFirstPageFormat="First Page",
                                            LiElementClasses=new [] {"page-link"},
                                        })
                                    }else if(ViewBag.searchResult==2){
                                        @Html.PagedListPager((IPagedList<Rooms>)ViewBag.room_list, page =>Url.Action("AdminSortRoomSuite", "Room", new {page =page}),
                                        new PagedListRenderOptions{
                                            MaximumPageNumbersToDisplay=3,
                                            PreviousElementClass="previous-button horizontal-paging",
                                            LinkToPreviousPageFormat="<< Previous",
                                            NextElementClass="next-button horizontal-paging",
                                            LinkToNextPageFormat="Next >>",
                                            UlElementClasses= new[] {"horizontal-paging","bottom-number"},
                                            LinkToLastPageFormat="Last Page",
                                            LinkToFirstPageFormat="First Page",
                                            LiElementClasses=new [] {"page-link"},
                                        })
                                    }else{
                                        @Html.PagedListPager((IPagedList<Rooms>)ViewBag.room_list, page =>Url.Action("AdminRoomSuite", "Room", new {page =page}),
                                        new PagedListRenderOptions{
                                            MaximumPageNumbersToDisplay=3,
                                            PreviousElementClass="previous-button horizontal-paging",
                                            LinkToPreviousPageFormat="<< Previous",
                                            NextElementClass="next-button horizontal-paging",
                                            LinkToNextPageFormat="Next >>",
                                            UlElementClasses= new[] {"horizontal-paging","bottom-number"},
                                            LinkToLastPageFormat="Last Page",
                                            LinkToFirstPageFormat="First Page",
                                            LiElementClasses=new [] {"page-link"},
                                        })
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function() {
         $('.delete-link').click(function(e) {
           e.preventDefault();
           var id = $(this).data('id');
           var deleteUrl = $(this).attr('href');
           console.log(id);
           Swal.fire({
             title: 'Are you sure?',
             text: 'You will not be able to recover this room!',
             icon: 'warning',
             showCancelButton: true,
             confirmButtonColor: '#3085d6',
             cancelButtonColor: '#d33',
             confirmButtonText: 'Yes, delete it!'
           }).then((result) => {
             if (result.isConfirmed) {
               window.location.href = deleteUrl;
             }
           });
         });
        });
    </script>
</body>

</html>