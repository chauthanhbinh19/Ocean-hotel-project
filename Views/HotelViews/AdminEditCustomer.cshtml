        <!-- ==============================main============================ -->
        <div class="main">
            <div class="top-bar">
                <div class="toggle"><i class="fa-solid fa-bars"></i></div>
                <div class="search">
                </div>
                <div id="change-dark-mode">
                    <i class="fa-solid fa-sun"></i>
                </div>
                <div class="user-role-name">
                    <div class="user">
                        <img src="~/Image/Avatar/@ViewBag.employee_avatar.img" alt="">
                    </div>
                    <div class="role-name">
                        <span class="user1"style="font-size: 18px;">@ViewBag.employee_avatar.name</span><br>
                        <span class="user2"style="font-size: 14px;">@ViewBag.employee_avatar.role</span>
                    </div>
                </div>
            </div>
            <!-- ==============================Card============================== -->
            <div class="sub-main">
                <div class="article-11">
                    <div class="box-tittle-1">
                        <p>Edit Customer</p>
                        <img src="~/Image/svgpng.com/item (240).png" alt="">
                    </div>
                    <div class="search-box">
                        <form method="post" asp-controller="Customer" asp-action="AdminUpdateCustomer" enctype="multipart/form-data">
                            <div class="box-context">
                            <div class="sub-main-bottom sub-bg background_bg1">
                                <div class="main-col">
                                    <div><label>Customer ID</label></div>
                                    <select asp-for="id" id="customer_id">
                                        @foreach(var customer1 in ViewBag.customer_list){
                                            <option value="@customer1.id">@customer1.id</option>
                                        }
                                    </select>
                                    @Html.ValidationMessageFor(m => m.id)
                                </div>
                                <div class="main-col">
                                    <div><label>Name</label></div>
                                    <input type="text" asp-for="name" id="customer_name" list="customerlist">
                                    <datalist id="customerlist">
                                        @foreach(var customer1 in ViewBag.customer_list){
                                            <option value="@customer1.name"></option>
                                        }
                                    </datalist>
                                    @Html.ValidationMessageFor(m => m.name)
                                </div>
                                <div class="main-col">
                                    <div><label>Gender</label></div>
                                    <select asp-for="gender" id="customer_gender">
                                        <option>Male</option>
                                        <option>Female</option>
                                    </select>
                                    @Html.ValidationMessageFor(m => m.gender)
                                </div>
                                <div class="main-col">
                                    <div><label>Date of Birth</label></div>
                                    <input type="date" asp-for="dateofbirth" id="dateofbirth">
                                    @Html.ValidationMessageFor(m => m.dateofbirth)
                                </div>
                                <div class="main-col">
                                    <div><label>Email</label></div>
                                    <input type="email" asp-for="email" id="customer_email" list="customeremaillist">
                                    @Html.ValidationMessageFor(m => m.email)
                                </div>
                                <div class="main-col">
                                    <div><label>Phone Number</label></div>
                                    <input type="text" asp-for="phone" id="customer_phone" list="customerphonelist">
                                    @Html.ValidationMessageFor(m => m.phone)
                                </div>
                                <div class="main-col">
                                    <div><label>Address</label></div>
                                    <input type="text" asp-for="address" id="customer_address">
                                    @Html.ValidationMessageFor(m => m.address)
                                </div>
                                <div class="main-col">
                                    <div><label>Username <span class="force">(*)</span></label></div>
                                    <input type="text" asp-for="account!.username" id="account_username">
                                    @Html.ValidationMessageFor(m => m.account!.username)
                                </div>
                                <div class="main-col">
                                    <div><label>Password <span class="force">(*)</span></label></div>
                                    <input type="text" asp-for="account!.password" id="account_password">
                                    @Html.ValidationMessageFor(m => m.account!.password)
                                </div>
                                <div class="main-col">
                                    <div><label>Status</label></div>
                                    <Select asp-for="status" id="status">
                                        <option value="1">Active</option>
                                        <option value="0">Inactive</option>
                                    </Select>
                                    @Html.ValidationMessageFor(m => m.status)
                                </div>
                                <div class="main-col">
                                    <div><label>Upload Image</label></div>
                                    <input type="file" name="file" id="">
                                </div>
                                <div class="main-col"><span>&nbsp;</span></div>
                                <div class="main-col"><span>&nbsp;</span></div>
                                <div class="main-col"><span>&nbsp;</span></div>
                            </div>
                            <div class="box-img">
                                <div class="box-img-2">
                                    @if(Model != null){
                                        <div class="box-img-2-1"><img src="~/Image/Avatar/@Model.img" alt="" id="box_img"></div>
                                    }else{
                                        <div class="box-img-2-1"><img src="~/Image/Avatar/avatar-03.jpg" alt="" id="box_img"></div>
                                    }
                                    <div class="box-text-2">
                                        <div class="box_id" style="color:cornflowerblue;" id="box_id">CUS-<input type="text" asp-for="id" id="input_id" class="box-input" readonly></div>
                                        <div class="box_name" id="box_name"><input type="text" asp-for="name" id="input_name" class="box-input" readonly></div>
                                    </div>
                                </div>
                                <div class="mini-box-circle">
                                    <div class="box-circle"><i class="fa-solid fa-phone-volume"></i></div>
                                    <div class="text-center" id="box_phone"><input type="text" asp-for="phone" id="input_phone" class="box-input" readonly></div>
                                </div>
                                <div class="mini-box-circle">
                                    <div class="box-circle"><i class="fa-solid fa-envelope"></i></div>
                                    <div class="text-center" id="box_email"><input type="text" asp-for="email" id="input_email" class="box-input" readonly></div>
                                </div>
                                <div class="mini-box-circle">
                                    <div class="box-circle"><i class="fa-solid fa-location-dot"></i></div>
                                    <div class="text-center" id="box_address"><input type="text" asp-for="address" id="input_address" class="box-input" readonly></div>
                                </div>
                                <div class="mini-box-circle">
                                    <div class="box-circle"><i class="fa-solid fa-check-double"></i></div>
                                    <div class="text-center" id="box_status"><input type="text" asp-for="status" id="input_status" class="box-input" readonly></div>
                                </div>
                            </div>
                            </div>
                            <div class="button-box">
                                <button type="submit" class="button-29">Save Customer</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function(){
            if($('#input_status').val() == "Active"){
                $('#input_status').addClass("active-status-1");
                $('#input_status').removeClass("inactive-status-1");
            }else{
                $('#input_status').addClass("inactive-status-1");
                $('#input_status').removeClass("active-status-1");
            }
            $('#customer_id').change(function () {
                var selectedOption = $(this).val();

                $.ajax({
                    type: "POST",
                    url: "/Customer/GetCustomerInfo",
                    data: { selectedOption: selectedOption },
                    success: function (response) {
                        $('#customer_phone').val(response.phone);
                        $('#customer_gender').val(response.gender);
                        $('#customer_name').val(response.name);
                        $('#customer_email').val(response.email);
                        $('#dateofbirth').val(response.dateofbirth);
                        $('#customer_address').val(response.address);
                        $('#account_username').val(response.username);
                        $('#account_password').val(response.password);
                        $('#status').val(response.statusint);
                        $('#input_id').val(selectedOption)
                        $('#input_name').val(response.name);
                        $('#input_phone').val(response.phone);
                        $('#input_email').val(response.email);
                        $('#input_address').val(response.address);
                        var status =response.status;
                        if(status == "Active"){
                            $('#input_status').addClass("active-status-1");
                            $('#input_status').val(response.status);
                            $('#input_status').removeClass("inactive-status-1");
                        }else{
                            $('#input_status').addClass("inactive-status-1");
                            $('#input_status').val(response.status);
                            $('#input_status').removeClass("active-status-1");
                        }
                        $('#box_img').attr("src","../Image/Avatar/"+response.img);
                    },
                    error: function () {
                        alert("An error occurred while retrieving contact information.");
                    }
                });
            });
        });
    </script>
</body>
