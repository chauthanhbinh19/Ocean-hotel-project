    <script>
        function change() {
            $('#customer_phone').val("0909");
            $('#customer_email').val("233@gmail.com");
        }
        $(document).ready(function () {
            $('#customer_name').change(function () {
                var selectedOption = $(this).val();

                $.ajax({
                    type: "POST",
                    url: "/Booking/GetCustomerInfo",
                    data: { selectedOption: selectedOption },
                    success: function (response) {
                        $('#customer_phone').val(response.phone);
                        $('#customer_email').val(response.email);
                    },
                    error: function () {
                        alert("An error occurred while retrieving contact information.");
                    }
                });
            });
            $('#customer_phone').change(function () {
                var selectedOption = $(this).val();

                $.ajax({
                    type: "POST",
                    url: "/Booking/GetCustomerInfo2",
                    data: { selectedOption: selectedOption },
                    success: function (response) {
                        $('#customer_name').val(response.name);
                        $('#customer_email').val(response.email);
                    },
                    error: function () {
                        alert("An error occurred while retrieving contact information.");
                    }
                });
            });
            $('#customer_email').change(function () {
                var selectedOption = $(this).val();

                $.ajax({
                    type: "POST",
                    url: "/Booking/GetCustomerInfo3",
                    data: { selectedOption: selectedOption },
                    success: function (response) {
                        $('#customer_name').val(response.name);
                        $('#customer_phone').val(response.phone);
                    },
                    error: function () {
                        alert("An error occurred while retrieving contact information.");
                    }
                });
            });
            $('#room_name').change(function () {
                var selectedOption = $(this).val();

                $.ajax({
                    type: "POST",
                    url: "/Booking/GetRoomInfo",
                    data: { selectedOption: selectedOption },
                    success: function (response) {
                        $('#room_type').val(response.type);
                        $('#room_id').val(response.id)
                    },
                    error: function () {
                        alert("An error occurred while retrieving contact information.");
                    }
                });
            });
            $(document).on('change', '#room_name', function () {
                var selectedOption = $("#roomnamelist").children('option:selected').text();
                $('#room_name').text(selectedOption);
            });
            $('#room_name, #checkin, #checkout').on('input', function () {
                var room_name = $('#room_name').val();
                var checkin = new Date($('#checkin').val());
                var checkout = new Date($('#checkout').val());
                console.log($('#checkin').val());
                console.log($('#checkout').val());
                if( checkout.getTime() < checkin.getTime()){
                    $('#checkouterror').text("Check-out date must be greater than check-in date")
                    @* alert("error") *@
                }else{
                    $('#checkouterror').text("")
                    if (room_name !== "" && checkin !== "" && checkout !== "") {
                    var timeDiff = Math.abs(checkout.getTime() - checkin.getTime());
                    var days = Math.ceil(timeDiff / (1000 * 3600 * 24));
                    var total=0;
                    $.ajax({
                        type: "POST",
                        url: "/Booking/GetRoomInfo2",
                        data: { selectedOption: room_name },
                        success: function (response) {
                            var price =parseFloat(response.type);
                            total=price* days;
                            $('#total').val(total);
                        },
                        error: function () {
                            alert("An error occurred while retrieving contact information.");
                        }
                    });
                }
                }
            });
        });
    </script>
