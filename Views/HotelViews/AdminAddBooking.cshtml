                                    @Html.ValidationMessageFor(m => m.check_in_date)
                                </div>
                                <div class="main-col">
                                    <div><label>Check Out Date</label></div>
                                    <input type="date" asp-for="check_out_date" id="checkout">
                                    <span id="checkouterror" style="color:red;"></span>
                                    @Html.ValidationMessageFor(m => m.check_out_date)
                                </div>
                                <div class="main-col">
