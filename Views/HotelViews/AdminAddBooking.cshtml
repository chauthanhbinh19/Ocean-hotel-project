                    <div>
                        <form method="post" asp-controller="Booking" asp-action="AdminInsertBooking">
                            <div class="sub-main-bottom sub-bg background_bg1">
                                <div class="main-col">
                                    <div><label>Customer Name</label></div>
                                    <input type="text" asp-for="customer!.name" id="customer_name"
                                        list="customernamelist" placeholder="Search Customer Name">
                                    @Html.ValidationMessageFor(m => m.customer!.name)
                                    <datalist name="" id="customernamelist">
                                        @foreach (var customer1 in ViewBag.customername_list)
                                        {
                                            <option>@customer1.name</option>
                                        }
                                    </datalist>
                                </div>
                                <div class="main-col">
                                    <div><label>Phone Number</label></div>
                                    <input type="text" asp-for="customer!.phone" id="customer_phone"
                                        list="customerphonelist" placeholder="Search Customer Phone">
                                    @Html.ValidationMessageFor(m => m.customer!.phone)
                                    <datalist name="" id="customerphonelist">
                                        @foreach (var customer1 in ViewBag.customername_list)
                                        {
                                            <option>@customer1.phone</option>
                                        }
                                    </datalist>
                                </div>
                                <div class="main-col">
                                    <div><label>Email</label></div>
                                    <input type="text" asp-for="customer!.email" id="customer_email"
                                        list="customeremaillist" placeholder="Search Customer Phone">
                                    @Html.ValidationMessageFor(m => m.customer!.email)
                                    <datalist name="" id="customeremaillist">
                                        @foreach (var customer1 in ViewBag.customername_list)
                                        {
                                            <option>@customer1.email</option>
                                        }
                                    </datalist>
                                </div>
                                <div class="main-col">
                                    <div><label>Room Name</label></div>
                                    <input type="text" asp-for="room!.id" id="room_id" style="display:none">
                                    <input type="text" asp-for="room!.name" id="room_name" list="roomnamelist"
                                        placeholder="Select">
                                    @Html.ValidationMessageFor(m => m.room!.name)
                                    <datalist name="" id="roomnamelist">
                                        @foreach (var room1 in ViewBag.roomsname_list)
                                        {
                                            <option value="@room1.id">@room1.name - @room1.status</option>
                                        }
                                    </datalist>
                                </div>
                                <div class="main-col">
                                    <div><label>Room Type</label></div>
                                    <input type="text" asp-for="room!.type" id="room_type" list="roomtypelist"
                                        placeholder="Select">
                                    @Html.ValidationMessageFor(m => m.room!.type)
                                    <datalist name="" id="roomtypelist">
                                        <option value="Standard"></option>
                                        <option value="Superior"></option>
                                        <option value="Deluxe"></option>
                                        <option value="Suite"></option>
                                    </datalist>
                                </div>
                                <div class="main-col">
